<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.thequizzworld">

    <application
        android:allowBackup="true"
        android:icon="@drawable/qwlogo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseFormatActivity"
            android:label="@string/choose_format" />
        <activity
            android:name=".TimeLimitedActivity"
            android:label="@string/choose_category" />
        <activity
            android:name=".StandardActivity"
            android:label="@string/choose_category" />
        <activity
            android:name=".RacingTracksActivity"
            android:label="@string/racing_tracks_button" />
        <activity
            android:name=".timeLimitedCongratulations"
            android:label="@string/congratulations_label" />
        <activity
            android:name=".DefinitionsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/definitios_button" />
        <activity
            android:name=".BrandsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/brands_button" />
        <activity
            android:name=".RulesActivity"
            android:label="@string/rules_button" />
        <activity
            android:name=".CarModelsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/models" />
        <activity
            android:name=".OriginsActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/origins" />
        <activity
            android:name=".RecognizeCarActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/recognize_car" />
        <activity android:name=".TimeLimitedQuiz" />
        <activity android:name=".MultipleChoiceQuiz"></activity>
    </application>

</manifest>